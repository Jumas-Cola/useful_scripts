set fileencodings=utf8,cp1251

set clipboard=unnamed
set ruler

" Нумерация строк
set number
" Запретить перенос строк
set nowrap

set hidden
nnoremap <C-N> :bnext<CR>
nnoremap <C-P> :bprev<CR>

" Выключаем звук в Vim
set visualbell t_vb=

